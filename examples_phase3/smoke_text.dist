// Phase 3 smoke: text measurement without opening a window.

shim_path = read("disturb_bindings/shim_path_phase3.bin");
if (shim_path == null) {
  shim_path = "./libraylib_disturb_phase3.so";
}

raylib_phase3 = ffi.load(shim_path,
  "i32 rl2_MeasureText(char*, i32)"
);

w = raylib_phase3.rl2_MeasureText("phase3", 20);
println("phase3 smoke_text MeasureText='phase3' -> " + w);
