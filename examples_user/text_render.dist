// User-facing text rendering example using disturb_bindings/raylib.dist

eval(read("disturb_bindings/raylib.dist"));

if (hasDisplay() == 0) {
  println("SKIP text_render: headless environment");
}
else {
  msg = "raylib.dist text";
  size = measureText(msg, 40);

  initWindow(800, 450, "raylib.dist text render");
  setTargetFPS(60);

  frame = 0;
  while (windowShouldClose() == 0 && frame < 120) {
    frame = frame + 1;
    x = 400 - (size / 2);
    beginDrawing();
    clearBackground(COLOR_RAYWHITE);
    drawText(msg, x, 180, 40, COLOR_PURPLE);
    drawLine(x, 230, x + size, 230, COLOR_DARKGRAY);
    endDrawing();
  }

  closeWindow();
  println("PASS text_render");
}
