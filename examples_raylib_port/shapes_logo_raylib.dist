// raylib [shapes] example - raylib logo (Disturb port)
// Source: shapes/shapes_logo_raylib.c

eval(read("examples_raylib_port/common.dist"));
name = "shapes_logo_raylib";
if (port_has_display() == 0) {
  cv = beginOffscreenColor(180, 110, PORT_RAYWHITE);
  offscreenDrawRect(cv, 40, 20, 80, 60, PORT_BLACK);
  offscreenDrawRect(cv, 48, 28, 64, 44, PORT_RAYWHITE);
  ok = 0;
  if (assertPixelEquals(name, cv, 42, 22, PORT_BLACK) == 1) {
    if (assertPixelEquals(name, cv, 50, 30, PORT_RAYWHITE) == 1) { ok = 1; }
  }
  if (ok == 1) { port_pass_headless(name); }
}
else {
  port_window_begin(800, 450, "raylib shapes: logo raylib");
  frame = 0;
  while (raylib_phase3.rl2_WindowShouldClose() == 0 && frame < 120) {
    frame = frame + 1;
    raylib_phase3.rl2_BeginDrawing();
    raylib_phase3.rl2_ClearBackground(PORT_RAYWHITE);
    raylib_phase3.rl2_DrawRectangle(280, 120, 240, 180, PORT_BLACK);
    raylib_phase3.rl2_DrawRectangle(300, 140, 200, 140, PORT_RAYWHITE);
    raylib_phase3.rl2_DrawText("raylib", 350, 220, 40, PORT_BLACK);
    raylib_phase3.rl2_EndDrawing();
  }
  port_window_end();
  port_pass_windowed(name);
}
