// raylib [shapes] example - ring drawing (Disturb port)
// Source: shapes/shapes_ring_drawing.c

eval(read("examples_raylib_port/common.dist"));
name = "shapes_ring_drawing";
if (port_has_display() == 0) {
  port_skip(name, "headless environment");
}
else {
  port_window_begin(800, 450, "raylib shapes: ring drawing");
  a = 0.0;
  frame = 0;
  while (raylib_phase3.rl2_WindowShouldClose() == 0 && frame < 120) {
    frame = frame + 1;
    a = a + 2.0;
    raylib_phase3.rl2_BeginDrawing();
    raylib_phase3.rl2_ClearBackground(PORT_RAYWHITE);
    raylib_phase3.rl2_DrawRing(400.0, 225.0, 70.0, 120.0, a, a + 210.0, 64, PORT_ORANGE);
    raylib_phase3.rl2_DrawRingLines(400.0, 225.0, 70.0, 120.0, a, a + 210.0, 64, PORT_BROWN);
    raylib_phase3.rl2_EndDrawing();
  }
  port_window_end();
  port_pass(name);
}
