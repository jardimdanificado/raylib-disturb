// raylib [shapes] example - triangle strip (Disturb port)
// Source: shapes/shapes_triangle_strip.c

eval(read("examples_raylib_port/common.dist"));
name = "shapes_triangle_strip";
if (port_has_display() == 0) {
  port_skip(name, "headless environment");
}
else {
  port_window_begin(800, 450, "raylib shapes: triangle strip");
  frame = 0;
  while (raylib_phase3.rl2_WindowShouldClose() == 0 && frame < 120) {
    frame = frame + 1;
    raylib_phase3.rl2_BeginDrawing();
    raylib_phase3.rl2_ClearBackground(PORT_RAYWHITE);

    // Triangle strip points (p0..p4), drawn explicitly as strip triangles.
    p0x = 120.0; p0y = 200.0;
    p1x = 200.0; p1y = 120.0;
    p2x = 280.0; p2y = 220.0;
    p3x = 360.0; p3y = 140.0;
    p4x = 440.0; p4y = 230.0;

    raylib_phase3.rl2_DrawTriangle(p0x, p0y, p1x, p1y, p2x, p2y, PORT_PURPLE);
    raylib_phase3.rl2_DrawTriangle(p2x, p2y, p1x, p1y, p3x, p3y, PORT_VIOLET);
    raylib_phase3.rl2_DrawTriangle(p2x, p2y, p3x, p3y, p4x, p4y, PORT_PINK);

    raylib_phase3.rl2_DrawTriangleLines(p0x, p0y, p1x, p1y, p2x, p2y, PORT_BLACK);
    raylib_phase3.rl2_DrawTriangleLines(p2x, p2y, p1x, p1y, p3x, p3y, PORT_BLACK);
    raylib_phase3.rl2_DrawTriangleLines(p2x, p2y, p3x, p3y, p4x, p4y, PORT_BLACK);

    raylib_phase3.rl2_DrawText("triangle strip (manual triangles)", 20, 20, 20, PORT_DARKGRAY);
    raylib_phase3.rl2_EndDrawing();
  }
  port_window_end();
  port_pass(name);
}
