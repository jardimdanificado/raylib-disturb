// raylib [models] example - model loading (Disturb port)
// Source: models/models_loading.c

eval(read("examples_raylib_port/common.dist"));
name = "models_loading";
if (port_has_display() == 0) {
  port_skip(name, "headless environment");
}
else if (port_has_asset("assets/model.obj") == 0) {
  port_skip(name, "missing asset assets/model.obj");
}
else {
  model = raylib_phase3.rl2_LoadModel("assets/model.obj");
  port_window_begin(800, 450, "raylib models: loading");
  frame = 0;
  while (raylib_phase3.rl2_WindowShouldClose() == 0 && frame < 120) {
    frame = frame + 1;
    raylib_phase3.rl2_BeginDrawing();
    raylib_phase3.rl2_ClearBackground(PORT_RAYWHITE);
    raylib_phase3.rl2_BeginMode3D(0);
    raylib_phase3.rl2_DrawModel(model, 0.0, 0.0, 0.0, 1.0, PORT_WHITE);
    raylib_phase3.rl2_DrawGrid(10, 1.0);
    raylib_phase3.rl2_EndMode3D();
    raylib_phase3.rl2_EndDrawing();
  }
  raylib_phase3.rl2_UnloadModel(model);
  port_window_end();
  port_pass(name);
}
