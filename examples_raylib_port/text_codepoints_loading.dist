// raylib [text] example - codepoints loading (Disturb port)
// Source: text/text_codepoints_loading.c

eval(read("examples_raylib_port/common.dist"));
name = "text_codepoints_loading";

idx = [0];
idx.size = 1;
cp = raylib_phase3.rl2_GetCodepoint("A", idx, idx.size);
count = raylib_phase3.rl2_GetCodepointCount("Hello");
count2 = raylib_phase3.rl2_GetCodepointCount("raylib");

ok = 0;
if (cp > 0) {
  if (count > 0) {
    if (count2 > 0) {
      ok = 1;
    }
  }
}

if (ok == 1) {
  port_pass(name);
}
else {
  port_fail(name, "codepoint helpers returned unexpected values");
}
