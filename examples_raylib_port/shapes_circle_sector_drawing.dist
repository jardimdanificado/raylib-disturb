// raylib [shapes] example - circle sector drawing (Disturb port)
// Source: shapes/shapes_circle_sector_drawing.c

eval(read("examples_raylib_port/common.dist"));
name = "shapes_circle_sector_drawing";
if (port_has_display() == 0) {
  port_skip(name, "headless environment");
}
else {
  port_window_begin(800, 450, "raylib shapes: circle sector drawing");
  start = 0.0;
  frame = 0;
  while (raylib_phase3.rl2_WindowShouldClose() == 0 && frame < 120) {
    frame = frame + 1;
    start = start + 1.5;
    end_angle = start + 120.0;

    raylib_phase3.rl2_BeginDrawing();
    raylib_phase3.rl2_ClearBackground(PORT_RAYWHITE);
    raylib_phase3.rl2_DrawCircleSector(400.0, 220.0, 120.0, start, end_angle, 48, PORT_GREEN);
    raylib_phase3.rl2_DrawCircleSectorLines(400.0, 220.0, 120.0, start, end_angle, 48, PORT_DARKBLUE);
    raylib_phase3.rl2_EndDrawing();
  }
  port_window_end();
  port_pass(name);
}
