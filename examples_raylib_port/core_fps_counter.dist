// raylib [core] example - FPS counter (Disturb port)

eval(read("examples_raylib_port/common.dist"));
name = "core_fps_counter";
if (port_has_display() == 0) {
  cv = beginOffscreenColor(160, 90, PORT_RAYWHITE);
  offscreenDrawText(cv, "FPS=60", 8, 8, 10, PORT_DARKGRAY);
  if (assertPixelNotEquals(name, cv, 10, 10, PORT_RAYWHITE) == 1) {
    port_pass_headless(name);
  }
}
else {
  port_window_begin(640, 360, "raylib core: fps");
  frame = 0;
  while (raylib_phase3.rl2_WindowShouldClose() == 0 && frame < 180) {
    frame = frame + 1;
    fps = raylib_phase3.rl2_GetFPS();
    raylib_phase3.rl2_BeginDrawing();
    raylib_phase3.rl2_ClearBackground(PORT_RAYWHITE);
    raylib_phase3.rl2_DrawText("FPS = " + fps, 20, 20, 24, PORT_DARKGRAY);
    raylib_phase3.rl2_EndDrawing();
  }
  port_window_end();
  port_pass_windowed(name);
}
