// raylib [core] example - dynamic window title (Disturb port)

eval(read("examples_raylib_port/common.dist"));
name = "core_window_title";
if (port_has_display() == 0) {
  cv = beginOffscreenColor(180, 100, PORT_RAYWHITE);
  offscreenDrawText(cv, "title frame 120", 10, 30, 10, PORT_DARKGRAY);
  if (assertPixelNotEquals(name, cv, 12, 32, PORT_RAYWHITE) == 1) {
    port_pass_headless(name);
  }
}
else {
  port_window_begin(640, 360, "raylib core: title");
  frame = 0;
  while (raylib_phase3.rl2_WindowShouldClose() == 0 && frame < 180) {
    frame = frame + 1;
    if ((frame % 60) == 0) { raylib_phase3.rl2_SetWindowTitle("raylib core: title frame " + frame); }
    raylib_phase3.rl2_BeginDrawing();
    raylib_phase3.rl2_ClearBackground(PORT_RAYWHITE);
    raylib_phase3.rl2_DrawText("Window title updates every second", 120, 170, 20, PORT_DARKGRAY);
    raylib_phase3.rl2_EndDrawing();
  }
  port_window_end();
  port_pass_windowed(name);
}
